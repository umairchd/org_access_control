<%= form_with(model: blog, class: "contents") do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul class="list-disc ml-6">
        <% blog.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": blog.errors[:title].none?, "border-red-400 focus:outline-red-600": blog.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :body %>
    <%= form.text_area :body, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": blog.errors[:body].none?, "border-red-400 focus:outline-red-600": blog.errors[:body].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :age_group %>
    <%= form.select :age_group, Blog.age_groups.keys.map { |k| [k.titleize, k] },
      {},  # options hash (prompt, etc.)
      class: [
        "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
        blog.errors[:age_group].none? ? "border-gray-400 focus:outline-blue-600" : "border-red-400 focus:outline-red-600"
      ]
    %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
