<div class="flex items-center justify-center w-full h-full">
  <div class="w-full max-w-md bg-gray-100 p-8 rounded-2xl shadow-lg">
    <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">Log in to Your Account</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded-lg" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-600" %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.submit "Log in", class: "w-full bg-indigo-600 cursor-pointer text-white font-semibold py-2 px-4 rounded-lg hover:bg-indigo-700 transition duration-200" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-500">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

