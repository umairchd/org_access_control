<div id="<%= dom_id organization %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= organization.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= organization.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Role:</strong>
    <%= organization.memberships.where(user_id: current_user.id).last&.role %>
  </div>
</div>
